    <script>
        var ingredientRow=1;
        var stepRow=1;
        var listIngredientID = `1`;
        var listStepID=`1`;
        function addIngredient() {
            ingredientRow+=1;            
            var html = `<div class="row" id="ingredientRowID`+ ingredientRow + `">
            <div class ="col-12" style="font-weight:bold"> Ingredient: </div>
                                        <br/>
                                                        <div class="col-12 col-lg-6" >
                                                            <input type="text" class="form-control" name="ingredientName`+ ingredientRow + `" id="ingredientName` + ingredientRow + `" placeholder="Ingredient Name">
                                        </div>
                                        <div class="col-12 col-lg-6">
                                                            <input type="text" class="form-control" name="quantity`+ ingredientRow + `" id="quantity` + ingredientRow + `" placeholder="Quantity">
                                        </div>
                                                <div class="col-12">
                                                            <select class="form-control" name="ingredientCategory`+ ingredientRow + `" id="ingredientCategory` + ingredientRow + `">
                                                <option value="Egg">Egg</option>
                                                <option value="Beef">Beef</option>
                                                <option value="Vegetable">Vegetable</option>
                                            </select>
                                        </div>
                                        <button type="button" onclick="removeIngredient(`+ ingredientRow + `)">Remove ingredient</button>
                                    </div>`;
            var form = document.getElementById(`ingredientRow`);
            form.innerHTML+=html;
            listIngredientID+=`,`+ingredientRow;
            console.log(listIngredientID);
        }

        function removeIngredient(id) {
            var div = document.getElementById(`ingredientRowID`+id);
            div.remove();
            var removeString=`,`+id;
            var index=listIngredientID.indexOf(removeString);
            var temp1=listIngredientID.substring(0,index);
            var temp2=listIngredientID.substring(index+removeString.length,listIngredientID.length);
            listIngredientID=temp1+temp2;
            console.log(listIngredientID);            
        }
        function addStep() {
            stepRow+=1;
            var html = `<div class="row" id="stepRowID`+stepRow+`">
                                        <div class="col-12">
                                                    <input type="text" class="form-control" id="Step`+stepRow+`" placeholder="Step`+stepRow+`">
                                        </div>
                                        <div class="col-12">
                                                                    <textarea name="description`+stepRow+`" class="form-control" id="description`+stepRow+`" cols="30" rows="10" placeholder="Description`+stepRow+`"></textarea>
                                        </div>
                                                <button type="button" onclick="removeStep(`+stepRow+`)">Remove step</button>
                        </div>`;
            var div=document.getElementById(`stepRow`);
            div.innerHTML+=html;
            listStepID+=','+stepRow;
        }
        function removeStep(id) {
            var div = document.getElementById(`stepRowID` + id);
            div.remove();
            var removeString = `,` + id;
            var index = listStepID.indexOf(removeString);
            var temp1 = listStepID.substring(0, index);
            var temp2 = listStepID.substring(index + removeString.length, listStepID.length);
            listStepID=temp1+temp2;
        }
        function addHidden(){
            var listIngredientIdDiv = document.getElementById(`listIngredientIdDiv`);
            var listIngredientHtml = `<input type="hidden" asp-for="listIngredientID" id="listIngredientId" value="` + listIngredientID + `"/>`;
            listIngredientIdDiv.innerHTML+=listIngredientHtml;
            var listStepIdDiv = document.getElementById(`listStepIdDiv`);
            var listStepHtml = `<input type="hidden" asp-for="listStepID" id="listStepId" value="` + listStepID + `"/>`;
            listStepIdDiv.innerHTML+=listStepHtml;
        }
    </script>
